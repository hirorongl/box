<li>
<fieldset>
<legend>col_detail.thtml</legend>

{data_edit}

<div class="uk-panel" style="margin:1em">
    <div class="uk-panel-badge uk-badge uk-badge-danger">{!if new_img}New!{!endif}</div>
    <h3 class="uk-panel-title"><span style="color:green">&#123;data_link&#125;:</span>{data_link}</h3>

<fieldset>
<legend>core items e.g. prefix:data_</legend>

			<div class="uk-text-bold">{lang_title} {lang_id} {lang_code}&nbsp;
				{lang_description}&nbsp;
				{lang_date}&nbsp;<!-- 使用する日付 作成日付or編集日付or公開日 -->
				{lang_released}&nbsp;
				{lang_expired}&nbsp;
				{lang_remaingdays}&nbsp;
				{lang_addfield}&nbsp;<!-- ソート順に指定された追加属性項目 -->
			</div>
<hr />
<dl class="uk-description-list-horizontal">
<dt><span style="color:green">&#123;data_title&#125;:</span></dt><dd>{data_title}</dd>
<dt><span style="color:green">&#123;data_id&#125;:</span></dt><dd>{data_id}</dd>
<dt><span style="color:green">&#123;data_code&#125;:</span></dt><dd>{data_code}</dd>
<dt><span style="color:green">&#123;data_description&#125;:</span></dt><dd>{data_description}</dd>
<dt><span style="color:green">&#123;data_datefield&#125;:</span></dt><dd>{data_datefield} {new_img}<!-- 使用する日付 作成日付or編集日付or公開日 --></dd>
<dt><span style="color:green">&#123;data_datefield_shortdate&#125;:</span></dt><dd>{data_datefield_shortdate} {new_img}<!-- 使用する日付 作成日付or編集日付or公開日 --></dd>
<dt><span style="color:green">&#123;data_released&#125;:</span></dt><dd>{data_released}</dd>
<dt><span style="color:green">&#123;data_released_shortdate&#125;:</span></dt><dd>{data_released_shortdate}</dd>
<dt><span style="color:green">&#123;data_expired&#125;:</span></dt><dd>{data_expired}
</dd>
<dt><span style="color:green">&#123;data_expired_shortdate&#125;:</span></dt><dd>{data_expired_shortdate}
</dd>
<dt><span style="color:green">&#123;data_hits&#125;:</span></dt><dd>{data_hits}</dd>
<dt><span style="color:green">&#123;data_remaingdays&#125;:</span></dt><dd>{data_remaingdays}</dd>
<dt><span style="color:green">&#123;data_value&#125;:</span></dt><dd>{data_value}</dd><!-- ソート順に指定された追加属性項目 -->
</dl>
</fieldset>

<fieldset>
<legend>additional items e.g.</legend>

<!-- 下記テーマ変数　参考例です 登録されていない場合表示されません -->
